doctype html
head
    include includes/head

    // STYLESHEETS
    link(rel='stylesheet' type='text/css' href='./css/home.css')
    link(rel="stylesheet" type="text/css" href="./css/login-register.css")
body
    include includes/header

    #form-container
        form(action="/register" method="POST")
            input(type="text" name="username" placeholder="Username" minlength=3 maxlength=30)
            input(type="password" name="password" placeholder="Password" minlength=3)
            input(type="password" name="password-confirm" placeholder="Confirm Password" minlength=3)
            input(type="submit" value="Register" class="submit-button")

    include includes/side-menu

    include includes/particles
