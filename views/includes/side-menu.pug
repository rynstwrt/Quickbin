#side-menu
    #side-menu-header
        a.hamburger-icon.fa-solid.fa-bars
    if session.userUsername
        h2#welcome-text= "Hello, " + session.userUsername + "."
    else
        h2#welcome-text= "Hello."

    ul#side-menu-list
        - const HAS_LOGGED_IN = session.userID || session.userUsername || session.userEmail
        li
            if HAS_LOGGED_IN
                a(href='/logout') Logout
            else
                a(href='/login') Login
        if !HAS_LOGGED_IN
            li
                a(href='/signup') Sign Up
        else
            li
                a(href="/saved") My Saved Bins
        li
            a(href='/') New Quickbin
        li
            a(href='https://www.ryanstew.art' target="_blank") About
